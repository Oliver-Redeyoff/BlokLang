{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "outDir": "./src/build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "konva": ["node_modules/konva/lib/core"]
        },
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/block/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]}